<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nihai.MainPage"
             BackgroundColor="Transparent">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#F0F5FF" Offset="0" />
            <GradientStop Color="#FFFFFF" Offset="1" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout Padding="24,56,24,32" Spacing="28">
            <VerticalStackLayout Spacing="6">
                <Label Text="Medikal Envanter Yönetimi"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="#1F2559"
                       HorizontalOptions="Start" />
                <Label Text="Hoş Geldiniz, İbrahim"
                       FontSize="18"
                       TextColor="#7280A7"
                       HorizontalOptions="Start" />
            </VerticalStackLayout>

            <Grid RowSpacing="18" ColumnSpacing="18">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Grid.Column="0"
                        BackgroundColor="White"
                        StrokeThickness="0"
                        Padding="20,22">
                    <Border.Shadow>
                        <Shadow Brush="#1A9DA7F2"
                                Offset="0,10"
                                Radius="20"
                                Opacity="0.4" />
                    </Border.Shadow>
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="28" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="18">
                        <Border HeightRequest="64"
                                WidthRequest="64"
                                BackgroundColor="#E3EBFF"
                                StrokeThickness="0"
                                HorizontalOptions="Start">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="32" />
                            </Border.StrokeShape>
                            <Image Source="inventory_icon.svg"
                                   WidthRequest="30"
                                   HeightRequest="30"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Border>
                        <Label Text="Stok"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#1F2559"
                               HorizontalOptions="Start" />
                    </VerticalStackLayout>
                </Border>

                <Border Grid.Row="0"
                        Grid.Column="1"
                        BackgroundColor="White"
                        StrokeThickness="0"
                        Padding="20,22">
                    <Border.Shadow>
                        <Shadow Brush="#1A9DA7F2"
                                Offset="0,10"
                                Radius="20"
                                Opacity="0.4" />
                    </Border.Shadow>
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="28" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="18">
                        <Border HeightRequest="64"
                                WidthRequest="64"
                                BackgroundColor="#EAE5FF"
                                StrokeThickness="0"
                                HorizontalOptions="Start">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="32" />
                            </Border.StrokeShape>
                            <Image Source="case_icon.svg"
                                   WidthRequest="30"
                                   HeightRequest="30"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Border>
                        <Label Text="Vaka"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#1F2559"
                               HorizontalOptions="Start" />
                    </VerticalStackLayout>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCaseCardTapped" />
                    </Border.GestureRecognizers>
                </Border>

                <Border Grid.Row="1"
                        Grid.Column="0"
                        BackgroundColor="White"
                        StrokeThickness="0"
                        Padding="20,22">
                    <Border.Shadow>
                        <Shadow Brush="#1A9DA7F2"
                                Offset="0,10"
                                Radius="20"
                                Opacity="0.4" />
                    </Border.Shadow>
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="28" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="18">
                        <Border HeightRequest="64"
                                WidthRequest="64"
                                BackgroundColor="#E7F4FF"
                                StrokeThickness="0"
                                HorizontalOptions="Start">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="32" />
                            </Border.StrokeShape>
                            <Image Source="checklist_icon.svg"
                                   WidthRequest="30"
                                   HeightRequest="30"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Border>
                        <Label Text="Kontrol Listesi"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#1F2559"
                               HorizontalOptions="Start" />
                    </VerticalStackLayout>
                </Border>

                <Border Grid.Row="1"
                        Grid.Column="1"
                        BackgroundColor="White"
                        StrokeThickness="0"
                        Padding="20,22">
                    <Border.Shadow>
                        <Shadow Brush="#1A9DA7F2"
                                Offset="0,10"
                                Radius="20"
                                Opacity="0.4" />
                    </Border.Shadow>
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="28" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="18">
                        <Border HeightRequest="64"
                                WidthRequest="64"
                                BackgroundColor="#FFEFE5"
                                StrokeThickness="0"
                                HorizontalOptions="Start">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="32" />
                            </Border.StrokeShape>
                            <Image Source="history_icon.svg"
                                   WidthRequest="30"
                                   HeightRequest="30"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Border>
                        <Label Text="Geçmiş"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#1F2559"
                               HorizontalOptions="Start" />
                    </VerticalStackLayout>
                </Border>
            </Grid>

            <Border BackgroundColor="White"
                    StrokeThickness="0"
                    Padding="24,24"
                    HorizontalOptions="Center">
                <Border.Shadow>
                    <Shadow Brush="#1A9DA7F2"
                            Offset="0,10"
                            Radius="20"
                            Opacity="0.4" />
                </Border.Shadow>
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="30" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="18"
                                      HorizontalOptions="Center"
                                      VerticalOptions="Center">
                    <Border HeightRequest="72"
                            WidthRequest="72"
                            BackgroundColor="#F0F1FF"
                            StrokeThickness="0"
                            HorizontalOptions="Center">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="36" />
                        </Border.StrokeShape>
                        <Image Source="settings_icon.svg"
                               WidthRequest="32"
                               HeightRequest="32"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
                    </Border>
                    <Label Text="Ayarlar"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#1F2559"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center" />
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
